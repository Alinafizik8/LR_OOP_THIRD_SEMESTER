<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- 1. Security Constraints -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Public API (read-only for users)</web-resource-name>
            <url-pattern>/api/users</url-pattern>
            <url-pattern>/api/users/*</url-pattern>
            <url-pattern>/api/books</url-pattern>
            <url-pattern>/api/books/*</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admin API (write)</web-resource-name>
            <url-pattern>/api/users</url-pattern>
            <url-pattern>/api/books</url-pattern>
            <url-pattern>/api/admin/*</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- 2. Authentication method -->
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>Lab7 Realm</realm-name>
    </login-config>

    <!-- 3. Declare roles -->
    <security-role>
        <role-name>user</role-name>
    </security-role>
    <security-role>
        <role-name>admin</role-name>
    </security-role>

    <!-- 4. Servlet mappings -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/api/users</url-pattern>
        <url-pattern>/api/users/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BookServlet</servlet-name>
        <servlet-class>servlet.BookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookServlet</servlet-name>
        <url-pattern>/api/books</url-pattern>
        <url-pattern>/api/books/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>servlet.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/api/admin/*</url-pattern>
    </servlet-mapping>

</web-app>